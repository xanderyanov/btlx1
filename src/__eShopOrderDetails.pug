mixin orderDetails2
  .orderDetails2__area
    .orderDetails2__outer.wsite
      .orderDetails2__titleOuter
        .orderDetails2__mainTitle
          h1 Заказ
          span 20-01-2021 16:45
        .orderDetails2__mainTitleStatus.order-status-1 Ожидает оплаты
        .orderDetails2__mainTitleStatus.order-status-11 Оплачен
        .orderDetails2__mainTitleStatus.order-status-10 Исполнен
      .eCatalog
        each item in caroucel1
          .eCatalog__itemArea.eCatalog__itemAreaInWide(id=item.id)
            a.eCatalog__item(href="")
              .eCatalog__itemFav
                i.icon-eheart1.iconNoFav
                i.icon-eheart1.iconInFav
              .eCatalog__itemImgOuter 
                .eCatalog__itemImg(style='background-image: url(' + item.img + ');')
              .eCatalog__itemInfo 
                .eCatalog__itemTitle!= item.title 
                .eCatalog__itemDesc!= item.content 
                .eCatalog__itemPrice
                  span!= item.price 
                  span ₽
      .orderDetailsInfo__area
        .orderDetailsInfo
          .orderDetailsInfo1
            .orderDetailsInfo__title
              h3 Информация о заказе
            .orderDetailsInfoBox 
              span Получатель:
              span Иванов Сергей Александрович
            .orderDetailsInfoBox 
              span Доставка:
              span Санкт-Петербург, ул.Васильевского островского, 25/4
            .orderDetailsInfoBox 
              span Комментарий:
              span Тестовое оформление заказа
          .orderDetailsInfo2
            .orderDetailsInfo__title
              h3 Контактные данные
            .orderDetailsInfoBox 
              span Логин:
              span Sergio
            .orderDetailsInfoBox 
              span Телефон получателя:
              span +7 (987) 654-32-10
            .orderDetailsInfoBox 
              span E-mail:
              span user_007@gmail.com
        .orderDetailsInfoFinish
          .orderDetailsInfoFinish__totalCount 4 товара
          .orderDetailsInfoFinish__totalCost Итого: 221 800 ₽
          //- .orderDetailsInfoFinish__text Пока заказ находится на обработке у менеджера, Вы ничего не можете делать с этим заказом.
          
          .orderDetailsInfoFinish__btn Оплатить картой
          .orderDetailsInfoFinish__btnBack 
            i.icon-leftss2
            span Вернуться к редактированию заказа

