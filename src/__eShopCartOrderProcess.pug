                input.town_order(name='town_order', type='text', placeholder='')
              .zInputWrapper.w49
                label(for="street_order") Улица*:
                input.comment_order(name='comment_order', type='text', placeholder='')
              .zInputWrapper.w37
                label(for="house_order") Дом*:
                input.house_order(name='house_order', type='text', placeholder='')
              .zInputWrapper.w37
                label(for="building_order") Строение:
                input.building_order(name='building_order', type='text', placeholder='')
              .zInputWrapper.w22
                label(for="housing_order") Корпус:
                input.housing_order(name='housing_order', type='text', placeholder='')
              .zInputWrapper.w37
                label(for="entrance_order") Подъезд:
                input.entrance_order(name='entrance_order', type='text', placeholder='')
              .zInputWrapper.w37
                label(for="floor_order") Этаж:
                input.floor_order(name='floor_order', type='text', placeholder='')
              .zInputWrapper.w22
                label(for="flat_order") Квартира:
                input.flat_order(name='flat_order', type='text', placeholder='')
            .deliveryType__area 
              .deliveryType__title Вид доставки
              .zRadio.zRadioMore.active
                input(name="color" type="radio" id="zr1" value="standart" checked)
                label(for="zr1") Стандартная доставка 
                .deliveryType__price 150 ₽
              .zRadio.zRadioMore
                input(name="color" type="radio" id="zr2" value="standart")
                label(for="zr2") Быстрая доставка 
                .deliveryType__price 350 ₽
              .zRadio.zRadioMore
                input(name="color" type="radio" id="zr3" value="standart")
                label(for="zr3") Хочу прямо сейчас
                .deliveryType__price 5000 ₽
    .zInputWrapper
      label(for="comment_order") Комментарий к заказу:
      input.comment_order(name='comment_order', type='text', placeholder='')

