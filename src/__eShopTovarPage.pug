mixin eShopTovarSlider 
  .eShopTovarSlider.clearfix
    .swiper-container.eShopTovarSlider__container_image
      .swiper-wrapper.eShopTovarSlider__wrapper_image 
        each item in eCatalogBase
          .swiper-slide.eShopTovarSlider__slide_image
            a(href=item.img, data-fancybox='group1', data-caption='001')
              img.swiper-lazy(data-src=item.img, alt="")
              .swiper-lazy-preloader
      .swiper-pagination.eShopTovarSlider__pagination
    .eShopTovarSlider__container_thumb_outer
      .swiper-container.eShopTovarSlider__container_thumb
        .swiper-wrapper.eShopTovarSlider__wrapper_thumb
          each item in eCatalogBase
            .swiper-slide.eShopTovarSlider__slide_thumb
              .eShopTovarSlider__slide_thumb_inner
                img(src=item.img, alt="")
      .swiper-button-prev.eShopTovarSlider__prev
        i.icon-up3
      .swiper-button-next.eShopTovarSlider__next
        i.icon-down3
          
