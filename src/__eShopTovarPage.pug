mixin tovarSimilarCaroucel
  .tovarSimilarCaroucel__area
    .tovarSimilarCaroucel__outer
      .tovarSimilarCaroucel__title
        h2 С этим товаром покупают
      .tovarSimilarCaroucel
        .swiper-container.tsc1-container
          .swiper-wrapper.tsc1-wrapper
            each item in caroucel1
              .swiper-slide.tsc1-slide
                .eCatalog__itemArea_inSlider(id=item.id)
                  a.eCatalog__item_inSlider(href="")
                    .eCatalog__itemFav
                      i.icon-eheart1.iconNoFav
                      i.icon-eheart1.iconInFav
                    .eCatalog__itemImgOuter 
                      .eCatalog__itemImg(style='background-image: url(' + item.img + ');')
                    .eCatalog__itemInfo_inSlider 
                      .eCatalog__itemTitle!= item.title 
                      .eCatalog__itemDesc!= item.content 
                      .eCatalog__itemPrice
                        span!= item.price 
                        span ₽
        .tsc1__left.tovarSimilarCaroucel__left
          i.icon-arr-left1
        .tsc1__right.tovarSimilarCaroucel__right
          i.icon-arr-right1
        .swiper-pagination.tsc__pagination.tsc1__pagination


